<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" >
    

    <!--Buttons-->
    <Style x:Key="menuButton"
            TargetType="Button">
        <Setter Property="Margin" Value="10,10,10,10"/>
    </Style>

    <Style x:Key="menuTile" TargetType="Custom:Tile">
        <Setter Property="Margin" Value="10,10,10,10"/>
        <Setter Property="Background" Value="#FF2E4659"/>
        <!--<Setter Property="FontSize" Value="15"/>-->
    </Style>
    <Style TargetType="GroupBox" BasedOn="{StaticResource MetroGroupBox}">
        <Setter Property="Margin" Value="100,0,100,0"/>
        <Setter Property="Background" Value="#FF4B97C3"/>
        <Setter Property="BorderBrush" Value="#FF4B97C3"/>
        <Setter Property="Foreground" Value="#FF4B97C3"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource MetroButton}">
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>

</ResourceDictionary>